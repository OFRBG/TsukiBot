{
  "name": "edgebot",
  "version": "0.1.0",
  "description": "",
  "main": "src/bot.js",
  "author": "Oscar Fonseca",
  "repository": "https://github.com/OFRBG/EdgeBot",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "start": "ts-node -r dotenv-flow/config -r tsconfig-paths/register src/bot.ts",
    "dev": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'ts-node -r dotenv-flow/config -r tsconfig-paths/register' src/bot.ts -- -d",
    "debug": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'node --inspect -r dotenv-flow/config -r ts-node/register -r tsconfig-paths/register' src/bot.ts",
    "build": "run-s build:*",
    "build:out": "ttsc -p tsconfig.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "eslint --fix --ext .ts ./src",
    "test": "run-s build test:*",
    "test:lint": "eslint --ext .ts ./src && prettier \"src/**/*.ts\" --list-different",
    "test:unit": "jest",
    "version": "HUSKY_SKIP_HOOKS=1 standard-version",
    "madge": "madge src/bot.ts --exclude 'globals/index.ts|logger.ts' --ts-config ./tsconfig.json --dot | dot -Nshape=box -Gsplines=ortho -Gnewrank -Granksep=1 -Gnodesep=0.7 -Nwidth=2 -Tpng >| deps.png"
  },
  "dependencies": {
    "@types/axios": "^0.14.0",
    "@types/dotenv-flow": "^3.0.0",
    "@types/lodash": "^4.14.159",
    "@types/winston": "^2.4.4",
    "@types/yargs": "^15.0.5",
    "axios": "^0.19.2",
    "discord.js": "^12.2.0",
    "dotenv-flow": "^3.2.0",
    "env-var": "^6.3.0",
    "lodash": "^4.17.19",
    "npm-run-all": "^4.1.5",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "winston": "^3.3.3",
    "yargs": "^15.4.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.7",
    "@types/node": "^14.0.26",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "commitizen": "^4.1.2",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-functional": "^3.0.1",
    "eslint-plugin-jest": "^23.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.1.0",
    "jest": "^26.1.0",
    "nodemon": "^2.0.4",
    "prettier": "^1.18.2",
    "source-map-support": "^0.5.19",
    "standard-version": "^8.0.1",
    "ts-jest": "^26.1.3",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-commit": "npm run fix"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
